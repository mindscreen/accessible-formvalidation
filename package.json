{
    "name": "@mindscreen/formvalidation",
    "description": "Provides means for an accessible form validation",
    "scripts": {
        "compile": "tsc",
        "start": "tsc --watch",
        "sass": "sass scss/forms.scss:dist/base.css",
        "examples:fromOptions": "npm run sass && esbuild examples/fromOptions.ts --bundle --outfile=examples/fromOptions.js",
        "build": "npm run sass && npm run compile",
        "docs": "typedoc src/**/*.ts"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^4.19.0",
        "@typescript-eslint/parser": "^4.19.0",
        "esbuild": "^0.18.11",
        "eslint": "^7.22.0",
        "sass": "^1.63.6",
        "typedoc": "^0.24.8",
        "typescript": "^4.9.5"
    }
}
